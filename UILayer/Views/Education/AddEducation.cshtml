@model EducationCreateDto
@{
    ViewData["Title"] = "AddEducation";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description"> Yetenek Ekle </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="Name">Okul Adı</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Okul Adı">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Major">Bölüm</label>
                    <input type="text" class="form-control" id="Major" name="Major" placeholder="Bölüm">
                    <span asp-validation-for="Major" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="StartingDate">Başlangıç Tarihi</label>
                    <input type="text" class="form-control" id="StartingDate" name="StartingDate" placeholder="Başlangıç Tarihi">
                    <span asp-validation-for="StartingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="EndDate">Bitiş Tarihi</label>
                    <input type="text" class="form-control" id="EndDate" name="EndDate" placeholder="Bitiş Tarihi">
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>
