
@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description"> Profil Bilgilerini Düzenle </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1"> Adınız</label>
                    <input type="text" class="form-control" asp-for="Name"  id="Name" placeholder="Ad">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1"> Soyadınız</label>
                    <input type="text" class="form-control"  asp-for="Surname" id="Surname" placeholder="Soyad">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adınız</label>
                    <input type="text" class="form-control"  asp-for="Username" id="Username" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email Adresiniz</label>
                    <input type="email" class="form-control"  asp-for="Email" id="exampleInputEmail3" placeholder="Mail Adresi">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Parolanız</label>
                    <input type="password" class="form-control" name="" id="exampleInputPassword4" placeholder="Parola">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Parolanız Tekrar</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Parola Tekrar">
                </div>
                <div class="form-group">
                    <label>Resim Seç</label>
                    <input type="file" asp-for="Picture">
@*                     <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükleyin">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div> *@
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>