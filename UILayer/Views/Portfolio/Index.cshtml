@model List<PortfolioListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int number = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <p class="card-description">
                Projelerim
            </p>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Proje Adı </th>
                            <th> Özellik </th>
                            <th> Proje Url Yolu </th>
                            <th>  </th>
                            <th>  </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            number += 1;
                            <tr>
                                <td> @number </td>
                                <td> @item.Name </td>
                                <td> @item.Architectural </td>
                                <td> @item.Url </td>
                                <td class="action-buttons">
                                    <a href="/Portfolio/UpdatePortfolio/@item.Id" class="btn btn-inverse-success btn-fw">Güncelle</a>
                                </td>
                                <td class="action-buttons">
                                    <a href="/Portfolio/DeletePortfolio/@item.Id" class="btn btn-inverse-danger btn-fw">Sil</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <a href="/Portfolio/AddPortfolio/" class="btn btn-inverse-success btn-fw">Proje Ekle</a>
            </div>
        </div>
    </div>
</div>