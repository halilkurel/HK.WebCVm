@model PortfolioCreateDto
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description"> Proje Ekle </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="Name">Proje Adı</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Proje  Adı">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Image">Resim</label>
                    <input type="text" class="form-control" id="Image" name="Image" placeholder="Resim">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Url">Url</label>
                    <input type="text" class="form-control" id="Url" name="Url" placeholder="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Architectural">Mimari</label>
                    <input type="text" class="form-control" id="Architectural" name="Architectural" placeholder="Mimari">
                    <span asp-validation-for="Architectural" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!-- Hidden input field -->
                    <input type="hidden" class="form-control" id="ReleaseDate" name="ReleaseDate" value="@DateTime.Now">
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>
