@model List<TestimonialListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int number = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <p class="card-description">
                Referanslarım
            </p>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> İsim Soyisim</th>
                            <th> Resim Yolu </th>
                            <th> Ünvan </th>
                            <th> Yorum </th>
                            <th>  </th>
                            <th>  </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            number += 1;
                            <tr>
                                <td> @number </td>
                                <td> @item.Name </td>
                                <td> @item.Image </td>
                                <td> @item.Title </td>
                                <td> @item.Comment </td>
                                <td class="action-buttons">
                                    <a href="/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-inverse-success btn-fw">Güncelle</a>
                                </td>
                                <td class="action-buttons">
                                    <a href="/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-inverse-danger btn-fw">Sil</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <a href="/Testimonial/AddTestimonial/" class="btn btn-inverse-success btn-fw">Referans Ekle</a>
            </div>
        </div>
    </div>
</div>