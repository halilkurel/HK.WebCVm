@model List<SkillListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>

    .progress-bar-container {
        width: 55%; /* Ayarlayabilirsiniz */
    }
</style>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenekler</h4>
            <p class="card-description">
                Yeteneklerim
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Yetenek</th>
                            
                            <th class="progress-bar-container">Yüzdesi</th>
                            <th> </th>
                            <th class="action-buttons"></th>
                            <th class="action-buttons"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@item.SkillName</td>
                                
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @item.Degree%" aria-valuenow="@item.Degree" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="% @item.Degree"></div>
                                    </div>
                                </td>
                                <td> % @item.Degree</td>
                                <td class="action-buttons">
                                    <a href="/Skill/UpdateSkill/@item.Id" class="btn btn-inverse-primary btn-fw">Güncelle</a>
                                </td>
                                <td class="action-buttons">
                                    <a href="/Skill/DeleteSkill/@item.Id" class="btn btn-inverse-danger btn-fw">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Skill/AddSkill/" class="btn btn-inverse-success btn-fw">Yetenek Ekle</a>
            </div>
        </div>
    </div>
</div>
